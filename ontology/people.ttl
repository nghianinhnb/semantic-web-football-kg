@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

# Extended Player attributes using standard vocabularies
kg:birthPlace a owl:ObjectProperty ;
  rdfs:label "birth place"@en , "quê quán"@vi ;
  rdfs:comment "Place where the player was born"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:City ;
  rdfs:subPropertyOf schema:birthPlace .

kg:nationality a owl:ObjectProperty ;
  rdfs:label "nationality"@en , "quốc tịch"@vi ;
  rdfs:comment "Player's nationality"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:Country ;
  rdfs:subPropertyOf schema:nationality .

kg:height a owl:DatatypeProperty ;
  rdfs:label "height"@en , "chiều cao"@vi ;
  rdfs:comment "Player's height in meters"@en ;
  rdfs:domain kg:Player ;
  rdfs:range xsd:decimal ;
  rdfs:subPropertyOf schema:height .

kg:weight a owl:DatatypeProperty ;
  rdfs:label "weight"@en , "cân nặng"@vi ;
  rdfs:comment "Player's weight in kilograms"@en ;
  rdfs:domain kg:Player ;
  rdfs:range xsd:decimal ;
  rdfs:subPropertyOf schema:weight .

# Footedness
kg:Footedness a owl:Class ;
  rdfs:label "Footedness"@en , "Chân thuận"@vi ;
  rdfs:comment "Preferred foot for playing"@en ;
  rdfs:subClassOf schema:Enumeration .

kg:preferredFoot a owl:ObjectProperty ;
  rdfs:label "preferred foot"@en , "chân thuận"@vi ;
  rdfs:comment "Player's preferred foot"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:Footedness .

kg:LeftFooted a kg:Footedness ;
  rdfs:label "Left footed"@en , "Chân trái"@vi .

kg:RightFooted a kg:Footedness ;
  rdfs:label "Right footed"@en , "Chân phải"@vi .

kg:BothFooted a kg:Footedness ;
  rdfs:label "Both footed"@en , "Cả hai chân"@vi .

# Coach and Staff
kg:Coach a owl:Class ;
  rdfs:label "Coach"@en , "Huấn luyện viên"@vi ;
  rdfs:comment "Football coach"@en ;
  rdfs:subClassOf schema:Person ,
                  foaf:Person .

kg:HeadCoach a owl:Class ;
  rdfs:label "Head Coach"@en , "Huấn luyện viên trưởng"@vi ;
  rdfs:comment "Head coach of a team"@en ;
  rdfs:subClassOf kg:Coach .

kg:AssistantCoach a owl:Class ;
  rdfs:label "Assistant Coach"@en , "Trợ lý huấn luyện viên"@vi ;
  rdfs:comment "Assistant coach"@en ;
  rdfs:subClassOf kg:Coach .

kg:manages a owl:ObjectProperty ;
  rdfs:label "manages"@en , "dẫn dắt"@vi ;
  rdfs:comment "Coach manages a team"@en ;
  rdfs:domain kg:Coach ;
  rdfs:range kg:Team ;
  owl:inverseOf kg:hasCoach ;
  rdfs:subPropertyOf schema:memberOf .

kg:hasCoach a owl:ObjectProperty ;
  rdfs:label "has coach"@en , "có HLV"@vi ;
  rdfs:comment "Team has a coach"@en ;
  rdfs:domain kg:Team ;
  rdfs:range kg:Coach ;
  rdfs:subPropertyOf schema:member .

# Referee
kg:Referee a owl:Class ;
  rdfs:label "Referee"@en , "Trọng tài"@vi ;
  rdfs:comment "Football referee"@en ;
  rdfs:subClassOf schema:Person ,
                  foaf:Person .

kg:referees a owl:ObjectProperty ;
  rdfs:label "referees"@en , "trọng tài"@vi ;
  rdfs:comment "Referee officiates a match"@en ;
  rdfs:domain kg:Referee ;
  rdfs:range kg:Match ;
  owl:inverseOf kg:referee ;
  rdfs:subPropertyOf schema:performer .

kg:referee a owl:ObjectProperty ;
  rdfs:label "referee"@en , "trọng tài"@vi ;
  rdfs:comment "Match is refereed by"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Referee ;
  rdfs:subPropertyOf schema:performer .