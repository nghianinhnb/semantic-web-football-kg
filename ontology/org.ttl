@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

# Stadium and Venue
kg:Organization a owl:Class ;
  rdfs:label "Organization"@en , "Tổ chức"@vi ;
  rdfs:comment "Generic organization"@en ;
  rdfs:subClassOf schema:Organization .

kg:Stadium a owl:Class ;
  rdfs:label "Stadium"@en , "Sân vận động"@vi ;
  rdfs:comment "Football stadium"@en ;
  rdfs:subClassOf schema:SportsVenue .

kg:capacity a owl:DatatypeProperty ;
  rdfs:label "capacity"@en , "sức chứa"@vi ;
  rdfs:comment "Maximum capacity of the stadium"@en ;
  rdfs:domain kg:Stadium ;
  rdfs:range xsd:positiveInteger ;
  rdfs:subPropertyOf schema:maximumAttendeeCapacity .

kg:homeStadium a owl:ObjectProperty ;
  rdfs:label "home stadium"@en , "sân nhà"@vi ;
  rdfs:comment "Home stadium of a club"@en ;
  rdfs:domain kg:Club ;
  rdfs:range kg:Stadium ;
  owl:inverseOf kg:isHomeOf ;
  rdfs:subPropertyOf schema:location .

kg:isHomeOf a owl:ObjectProperty ;
  rdfs:label "is home of"@en , "là sân nhà của"@vi ;
  rdfs:comment "Stadium is home of a club"@en ;
  rdfs:domain kg:Stadium ;
  rdfs:range kg:Club ;
  rdfs:subPropertyOf schema:containedInPlace .

# Club properties
kg:hasMember a owl:ObjectProperty ;
  rdfs:label "has member"@en , "có thành viên"@vi ;
  rdfs:comment "Organization has a member"@en ;
  rdfs:domain kg:Organization ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:member .

kg:foundedDate a owl:DatatypeProperty ;
  rdfs:label "founded date"@en , "ngày thành lập"@vi ;
  rdfs:comment "Date when the club was founded"@en ;
  rdfs:domain kg:Club ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf schema:foundingDate .

# Team management
kg:Owner a owl:Class ;
  rdfs:label "Owner"@en , "Chủ sở hữu"@vi ;
  rdfs:comment "Club owner"@en ;
  rdfs:subClassOf schema:Person .

kg:owns a owl:ObjectProperty ;
  rdfs:label "owns"@en , "sở hữu"@vi ;
  rdfs:comment "Owner owns a club"@en ;
  rdfs:domain kg:Owner ;
  rdfs:range kg:Club ;
  owl:inverseOf kg:hasOwner ;
  rdfs:subPropertyOf schema:owns .

kg:hasOwner a owl:ObjectProperty ;
  rdfs:label "has owner"@en , "có chủ sở hữu"@vi ;
  rdfs:comment "Club has an owner"@en ;
  rdfs:domain kg:Club ;
  rdfs:range kg:Owner ;
  rdfs:subPropertyOf schema:owner .

# Team statistics
kg:teamName a owl:DatatypeProperty ;
  rdfs:label "team name"@en , "tên đội"@vi ;
  rdfs:comment "Official name of the team"@en ;
  rdfs:domain kg:Team ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:name .

kg:teamAbbreviation a owl:DatatypeProperty ;
  rdfs:label "team abbreviation"@en , "tên viết tắt"@vi ;
  rdfs:comment "Short abbreviation of the team name"@en ;
  rdfs:domain kg:Team ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:alternateName .