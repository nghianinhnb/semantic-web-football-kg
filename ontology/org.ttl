@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix geo: <http://www.opengis.net/ont/geosparql#> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

kg:Team a owl:Class ;
  rdfs:label "Team"@en , "Đội bóng"@vi ;
  rdfs:subClassOf schema:SportsTeam .

kg:Club rdfs:subClassOf kg:Team .

kg:NationalTeam a owl:Class ;
  rdfs:label "National Team"@en , "Đội tuyển quốc gia"@vi ;
  rdfs:subClassOf kg:Team .

kg:Coach a owl:Class ;
  rdfs:label "Coach"@en , "Huấn luyện viên"@vi ;
  rdfs:subClassOf schema:Person .

kg:Owner a owl:Class ;
  rdfs:label "Owner"@en , "Chủ sở hữu"@vi ;
  rdfs:subClassOf schema:Person .

kg:Referee a owl:Class ;
  rdfs:label "Referee"@en , "Trọng tài"@vi ;
  rdfs:subClassOf schema:Person .

kg:Stadium a owl:Class ;
  rdfs:label "Stadium"@en , "Sân vận động"@vi ;
  rdfs:subClassOf schema:SportsVenue .

# Properties (domain/range, inverses where useful)
kg:homeStadium a owl:ObjectProperty ;
  rdfs:label "home stadium"@en , "sân nhà"@vi ;
  rdfs:domain kg:Club ;
  rdfs:range kg:Stadium ;
  owl:inverseOf kg:isHomeOf .

kg:isHomeOf a owl:ObjectProperty ;
  rdfs:label "is home of"@en , "là sân nhà của"@vi ;
  rdfs:domain kg:Stadium ;
  rdfs:range kg:Club .

kg:manages a owl:ObjectProperty ;
  rdfs:label "manages"@en , "dẫn dắt"@vi ;
  rdfs:domain kg:Coach ;
  rdfs:range kg:Team ;
  owl:inverseOf kg:hasCoach .

kg:hasCoach a owl:ObjectProperty ;
  rdfs:label "has coach"@en , "có HLV"@vi ;
  rdfs:domain kg:Team ;
  rdfs:range kg:Coach .

kg:owns a owl:ObjectProperty ;
  rdfs:label "owns"@en , "sở hữu"@vi ;
  rdfs:domain kg:Owner ;
  rdfs:range kg:Club ;
  owl:inverseOf kg:hasOwner .

kg:hasOwner a owl:ObjectProperty ;
  rdfs:label "has owner"@en , "có chủ sở hữu"@vi ;
  rdfs:domain kg:Club ;
  rdfs:range kg:Owner .

kg:capacity a owl:DatatypeProperty ;
  rdfs:label "capacity"@en , "sức chứa"@vi ;
  rdfs:domain kg:Stadium ;
  rdfs:range xsd:integer .

kg:foundedDate a owl:DatatypeProperty ;
  rdfs:label "founded date"@en , "ngày thành lập"@vi ;
  rdfs:domain kg:Club ;
  rdfs:range xsd:date .

kg:venue a owl:ObjectProperty ;
  rdfs:label "venue"@en , "địa điểm"@vi ;
  rdfs:range kg:Stadium .


