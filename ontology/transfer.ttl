@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

# Transfer and Membership using standard vocabularies
kg:Transfer a owl:Class ;
  rdfs:label "Transfer"@en , "Chuyển nhượng"@vi ;
  rdfs:comment "Player transfer between clubs"@en ;
  rdfs:subClassOf schema:Event ,
                  time:TemporalEntity .

kg:transferPlayer a owl:ObjectProperty ;
  rdfs:label "transfer player"@en , "cầu thủ"@vi ;
  rdfs:comment "Player being transferred"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range kg:Player ;
  rdfs:subPropertyOf schema:object .

kg:fromClub a owl:ObjectProperty ;
  rdfs:label "from club"@en , "từ CLB"@vi ;
  rdfs:comment "Club the player is transferred from"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range kg:Club ;
  rdfs:subPropertyOf schema:fromLocation .

kg:toClub a owl:ObjectProperty ;
  rdfs:label "to club"@en , "đến CLB"@vi ;
  rdfs:comment "Club the player is transferred to"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range kg:Club ;
  rdfs:subPropertyOf schema:toLocation .

kg:transferDate a owl:DatatypeProperty ;
  rdfs:label "transfer date"@en , "ngày chuyển nhượng"@vi ;
  rdfs:comment "Date when the transfer occurred"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf time:hasTime .

kg:transferFee a owl:DatatypeProperty ;
  rdfs:label "transfer fee"@en , "phí chuyển nhượng"@vi ;
  rdfs:comment "Transfer fee amount"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range xsd:decimal ;
  rdfs:subPropertyOf schema:price .

kg:currency a owl:DatatypeProperty ;
  rdfs:label "currency"@en , "tiền tệ"@vi ;
  rdfs:comment "Currency of the transfer fee"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:priceCurrency .

kg:transferType a owl:ObjectProperty ;
  rdfs:label "transfer type"@en , "loại chuyển nhượng"@vi ;
  rdfs:comment "Type of transfer (permanent, loan, free)"@en ;
  rdfs:domain kg:Transfer ;
  rdfs:range kg:TransferType .

kg:TransferType a owl:Class ;
  rdfs:label "Transfer Type"@en , "Loại chuyển nhượng"@vi ;
  rdfs:comment "Type of player transfer"@en ;
  rdfs:subClassOf schema:Enumeration .

kg:PermanentTransfer a kg:TransferType ;
  rdfs:label "Permanent Transfer"@en , "Chuyển nhượng vĩnh viễn"@vi .

kg:LoanTransfer a kg:TransferType ;
  rdfs:label "Loan Transfer"@en , "Cho mượn"@vi .

kg:FreeTransfer a kg:TransferType ;
  rdfs:label "Free Transfer"@en , "Chuyển nhượng tự do"@vi .

# Membership (Player in Team over time)
kg:Membership a owl:Class ;
  rdfs:label "Membership"@en , "Thành viên"@vi ;
  rdfs:comment "Player membership in a team over time"@en ;
  rdfs:subClassOf schema:Role ,
                  time:TemporalEntity .

kg:member a owl:ObjectProperty ;
  rdfs:label "member"@en , "thành viên"@vi ;
  rdfs:comment "Player who is a member"@en ;
  rdfs:domain kg:Membership ;
  rdfs:range kg:Player ;
  rdfs:subPropertyOf schema:hasRole .

kg:ofTeam a owl:ObjectProperty ;
  rdfs:label "of team"@en , "thuộc đội"@vi ;
  rdfs:comment "Team the player is a member of"@en ;
  rdfs:domain kg:Membership ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:memberOf .

kg:membershipStart a owl:DatatypeProperty ;
  rdfs:label "membership start"@en , "bắt đầu thành viên"@vi ;
  rdfs:comment "Start date of membership"@en ;
  rdfs:domain kg:Membership ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf time:hasBeginning .

kg:membershipEnd a owl:DatatypeProperty ;
  rdfs:label "membership end"@en , "kết thúc thành viên"@vi ;
  rdfs:comment "End date of membership"@en ;
  rdfs:domain kg:Membership ;
  rdfs:range xsd:date ;
  rdfs:subPropertyOf time:hasEnd .

kg:role a owl:DatatypeProperty ;
  rdfs:label "role"@en , "vai trò"@vi ;
  rdfs:comment "Role of the player in the team"@en ;
  rdfs:domain kg:Membership ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:roleName .