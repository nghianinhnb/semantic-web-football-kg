@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <http://schema.org/> .
@prefix time: <http://www.w3.org/2006/time#> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

# Match properties using standard vocabularies
kg:inCompetition a owl:ObjectProperty ;
  rdfs:label "in competition"@en , "thuộc giải"@vi ;
  rdfs:comment "Match is part of a competition"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Competition ;
  rdfs:subPropertyOf schema:partOf .

kg:inSeason a owl:ObjectProperty ;
  rdfs:label "in season"@en , "thuộc mùa giải"@vi ;
  rdfs:comment "Match is part of a season"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Season ;
  rdfs:subPropertyOf schema:partOf .

kg:attendance a owl:DatatypeProperty ;
  rdfs:label "attendance"@en , "khán giả"@vi ;
  rdfs:comment "Number of spectators at the match"@en ;
  rdfs:domain kg:Match ;
  rdfs:range xsd:nonNegativeInteger ;
  rdfs:subPropertyOf schema:maximumAttendeeCapacity .

kg:matchResult a owl:ObjectProperty ;
  rdfs:label "match result"@en , "kết quả trận đấu"@vi ;
  rdfs:comment "Result of the match"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:MatchResult ;
  rdfs:subPropertyOf schema:result .

kg:MatchResult a owl:Class ;
  rdfs:label "Match Result"@en , "Kết quả trận đấu"@vi ;
  rdfs:comment "Result of a football match"@en ;
  rdfs:subClassOf schema:Enumeration .

kg:Win a owl:Class ;
  rdfs:label "Win"@en , "Thắng"@vi ;
  rdfs:subClassOf kg:MatchResult .

kg:Draw a owl:Class ;
  rdfs:label "Draw"@en , "Hòa"@vi ;
  rdfs:subClassOf kg:MatchResult .

kg:Loss a owl:Class ;
  rdfs:label "Loss"@en , "Thua"@vi ;
  rdfs:subClassOf kg:MatchResult .

# Appearance (Player participation in a match)
kg:Appearance a owl:Class ;
  rdfs:label "Appearance"@en , "Ra sân"@vi ;
  rdfs:comment "Player's appearance in a specific match"@en ;
  rdfs:subClassOf schema:Event .

kg:appearanceOf a owl:ObjectProperty ;
  rdfs:label "appearance of"@en , "của cầu thủ"@vi ;
  rdfs:comment "Player who made the appearance"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range kg:Player ;
  rdfs:subPropertyOf schema:actor .

kg:appearanceInMatch a owl:ObjectProperty ;
  rdfs:label "appearance in match"@en , "trong trận"@vi ;
  rdfs:comment "Match where the appearance occurred"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range kg:Match ;
  rdfs:subPropertyOf schema:partOf .

kg:appearanceForTeam a owl:ObjectProperty ;
  rdfs:label "appearance for team"@en , "cho đội"@vi ;
  rdfs:comment "Team the player appeared for"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:memberOf .

kg:isStarter a owl:DatatypeProperty ;
  rdfs:label "is starter"@en , "đá chính"@vi ;
  rdfs:comment "Whether the player started the match"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range xsd:boolean .

kg:minutesPlayed a owl:DatatypeProperty ;
  rdfs:label "minutes played"@en , "phút thi đấu"@vi ;
  rdfs:comment "Number of minutes played in the match"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range xsd:nonNegativeInteger .

kg:positionAtMatch a owl:ObjectProperty ;
  rdfs:label "position at match"@en , "vị trí trận đấu"@vi ;
  rdfs:comment "Position played in this specific match"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range kg:Position .

kg:shirtNumberInMatch a owl:DatatypeProperty ;
  rdfs:label "shirt number in match"@en , "số áo trận đấu"@vi ;
  rdfs:comment "Shirt number worn in this specific match"@en ;
  rdfs:domain kg:Appearance ;
  rdfs:range xsd:positiveInteger .

# Match Events
kg:MatchEvent a owl:Class ;
  rdfs:label "Match Event"@en , "Sự kiện trận đấu"@vi ;
  rdfs:comment "Event that occurred during a match"@en ;
  rdfs:subClassOf schema:Event .

kg:inMatch a owl:ObjectProperty ;
  rdfs:label "in match"@en , "thuộc trận"@vi ;
  rdfs:comment "Match where the event occurred"@en ;
  rdfs:domain kg:MatchEvent ;
  rdfs:range kg:Match ;
  rdfs:subPropertyOf schema:partOf .

kg:byPlayer a owl:ObjectProperty ;
  rdfs:label "by player"@en , "bởi cầu thủ"@vi ;
  rdfs:comment "Player who performed the event"@en ;
  rdfs:domain kg:MatchEvent ;
  rdfs:range kg:Player ;
  rdfs:subPropertyOf schema:actor .

kg:forTeam a owl:ObjectProperty ;
  rdfs:label "for team"@en , "cho đội"@vi ;
  rdfs:comment "Team the event was performed for"@en ;
  rdfs:domain kg:MatchEvent ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:memberOf .

kg:minute a owl:DatatypeProperty ;
  rdfs:label "minute"@en , "phút"@vi ;
  rdfs:comment "Minute when the event occurred"@en ;
  rdfs:domain kg:MatchEvent ;
  rdfs:range xsd:nonNegativeInteger .

kg:second a owl:DatatypeProperty ;
  rdfs:label "second"@en , "giây"@vi ;
  rdfs:comment "Second within the minute when the event occurred"@en ;
  rdfs:domain kg:MatchEvent ;
  rdfs:range xsd:nonNegativeInteger .

# Goal Events
kg:GoalEvent a owl:Class ;
  rdfs:label "Goal"@en , "Bàn thắng"@vi ;
  rdfs:comment "Goal scored in a match"@en ;
  rdfs:subClassOf kg:MatchEvent .

kg:isOwnGoal a owl:DatatypeProperty ;
  rdfs:label "is own goal"@en , "phản lưới"@vi ;
  rdfs:comment "Whether the goal was an own goal"@en ;
  rdfs:domain kg:GoalEvent ;
  rdfs:range xsd:boolean .

kg:isPenalty a owl:DatatypeProperty ;
  rdfs:label "is penalty"@en , "phạt đền"@vi ;
  rdfs:comment "Whether the goal was scored from a penalty"@en ;
  rdfs:domain kg:GoalEvent ;
  rdfs:range xsd:boolean .

# Assist Events
kg:AssistEvent a owl:Class ;
  rdfs:label "Assist"@en , "Kiến tạo"@vi ;
  rdfs:comment "Assist made in a match"@en ;
  rdfs:subClassOf kg:MatchEvent .

# Card Events
kg:CardEvent a owl:Class ;
  rdfs:label "Card"@en , "Thẻ"@vi ;
  rdfs:comment "Card given to a player"@en ;
  rdfs:subClassOf kg:MatchEvent .

kg:cardType a owl:DatatypeProperty ;
  rdfs:label "card type"@en , "loại thẻ"@vi ;
  rdfs:comment "Type of card (yellow, red)"@en ;
  rdfs:domain kg:CardEvent ;
  rdfs:range xsd:string .

kg:YellowCard a owl:Class ;
  rdfs:label "Yellow Card"@en , "Thẻ vàng"@vi ;
  rdfs:subClassOf kg:CardEvent .

kg:RedCard a owl:Class ;
  rdfs:label "Red Card"@en , "Thẻ đỏ"@vi ;
  rdfs:subClassOf kg:CardEvent .