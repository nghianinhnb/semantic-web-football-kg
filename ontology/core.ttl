@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix schema: <http://schema.org/> .
@prefix kg: <https://kg-football.vn/ontology#> .
@prefix res: <https://kg-football.vn/resource/> .

<https://kg-football.vn/ontology>
  a owl:Ontology ;
  dct:title "KG-Football Ontology"@en ;
  dct:creator "KG Football Team" ;
  dct:license <https://creativecommons.org/licenses/by/4.0/> ;
  dct:issued "2025-01-17"^^xsd:date ;
  owl:versionInfo "1.0.0" ;
  owl:imports <https://kg-football.vn/ontology/people> ,
              <https://kg-football.vn/ontology/org> ,
              <https://kg-football.vn/ontology/geo> ,
              <https://kg-football.vn/ontology/competition> ,
              <https://kg-football.vn/ontology/match> ,
              <https://kg-football.vn/ontology/transfer> .

# Core Classes with proper alignment to standard vocabularies
kg:Player a owl:Class ;
  rdfs:label "Player"@en , "Cầu thủ"@vi ;
  rdfs:comment "Professional football player"@en ;
  rdfs:subClassOf schema:Person ,
                  foaf:Person .

kg:Team a owl:Class ;
  rdfs:label "Team"@en , "Đội bóng"@vi ;
  rdfs:comment "Football team (club or national team)"@en ;
  rdfs:subClassOf schema:SportsTeam .

kg:Club a owl:Class ;
  rdfs:label "Club"@en , "Câu lạc bộ"@vi ;
  rdfs:comment "Professional football club"@en ;
  rdfs:subClassOf kg:Team ,
                  schema:SportsTeam .

kg:Match a owl:Class ;
  rdfs:label "Match"@en , "Trận đấu"@vi ;
  rdfs:comment "Football match between two teams"@en ;
  rdfs:subClassOf schema:SportsEvent .

kg:Position a owl:Class ;
  rdfs:label "Position"@en , "Vị trí"@vi ;
  rdfs:comment "Playing position in football"@en ;
  rdfs:subClassOf schema:Enumeration .

# Core Properties with proper domains and ranges
kg:name a owl:DatatypeProperty ;
  rdfs:label "name"@en , "tên"@vi ;
  rdfs:comment "Generic name, aligns with schema:name"@en ;
  rdfs:domain rdfs:Resource ;
  rdfs:range xsd:string ;
  rdfs:subPropertyOf schema:name .

kg:playsFor a owl:ObjectProperty ;
  rdfs:label "plays for"@en , "thi đấu cho"@vi ;
  rdfs:comment "Indicates which team a player currently plays for"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:Team .

kg:hasPlayer a owl:ObjectProperty ;
  rdfs:label "has player"@en , "có cầu thủ"@vi ;
  rdfs:comment "Team has a player (inverse of playsFor)"@en ;
  rdfs:domain kg:Team ;
  rdfs:range kg:Player ;
  owl:inverseOf kg:playsFor .

kg:birthDate a owl:DatatypeProperty ;
  rdfs:label "birth date"@en , "ngày sinh"@vi ;
  rdfs:comment "Date of birth"@en ;
  rdfs:domain kg:Player ;
  rdfs:range xsd:date .

kg:shirtNumber a owl:DatatypeProperty ;
  rdfs:label "shirt number"@en , "số áo"@vi ;
  rdfs:comment "Player's jersey number"@en ;
  rdfs:domain kg:Player ;
  rdfs:range xsd:positiveInteger .

kg:primaryPosition a owl:ObjectProperty ;
  rdfs:label "primary position"@en , "vị trí sở trường"@vi ;
  rdfs:comment "Player's primary playing position"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:Position .

kg:club a owl:ObjectProperty ;
  rdfs:label "club"@en , "câu lạc bộ"@vi ;
  rdfs:comment "Club a player plays for (alias of playsFor, range Club)"@en ;
  rdfs:domain kg:Player ;
  rdfs:range kg:Club ;
  rdfs:subPropertyOf kg:playsFor .

# Match properties
kg:homeTeam a owl:ObjectProperty ;
  rdfs:label "home team"@en , "đội nhà"@vi ;
  rdfs:comment "Home team in a match"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:competitor .

kg:awayTeam a owl:ObjectProperty ;
  rdfs:label "away team"@en , "đội khách"@vi ;
  rdfs:comment "Away team in a match"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Team ;
  rdfs:subPropertyOf schema:competitor .

kg:venue a owl:ObjectProperty ;
  rdfs:label "venue"@en , "địa điểm"@vi ;
  rdfs:comment "Stadium where the match is played"@en ;
  rdfs:domain kg:Match ;
  rdfs:range kg:Stadium ;
  rdfs:subPropertyOf schema:location .

kg:kickoffTime a owl:DatatypeProperty ;
  rdfs:label "kickoff time"@en , "thời gian bắt đầu"@vi ;
  rdfs:comment "Start time of the match"@en ;
  rdfs:domain kg:Match ;
  rdfs:range xsd:dateTime .

# Position hierarchy
kg:Goalkeeper a owl:Class ;
  rdfs:label "Goalkeeper"@en , "Thủ môn"@vi ;
  rdfs:comment "Goalkeeper position"@en ;
  rdfs:subClassOf kg:Position .

kg:Defender a owl:Class ;
  rdfs:label "Defender"@en , "Hậu vệ"@vi ;
  rdfs:comment "Defender position"@en ;
  rdfs:subClassOf kg:Position .

kg:Midfielder a owl:Class ;
  rdfs:label "Midfielder"@en , "Tiền vệ"@vi ;
  rdfs:comment "Midfielder position"@en ;
  rdfs:subClassOf kg:Position .

kg:Forward a owl:Class ;
  rdfs:label "Forward"@en , "Tiền đạo"@vi ;
  rdfs:comment "Forward position"@en ;
  rdfs:subClassOf kg:Position .
